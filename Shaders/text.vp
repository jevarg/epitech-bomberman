#version 120

uniform	mat4 projection;
uniform	mat4 view;
uniform mat4 model;

uniform sampler2D fTexture0;

attribute vec2 vPosition;
attribute vec4 vColor;
attribute vec3 vNormal;
attribute vec2 vTexCoord;

varying vec4 fColor;
varying vec2 fUv;

void main(void)
{
  fColor = vColor;
  fUv = vTexCoord;

  vec2 pos = vPosition - vec2(800,450);
  pos /= vec2(800, 450);

  gl_Position = vec4(pos, 0, 1);
}
